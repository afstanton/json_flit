{
  "type": "scaffold",
  "args": {
    "appBar": {
      "type": "app_bar",
      "args": {
        "title": {
          "type": "text",
          "args": {
            "text": "InputError"
          }
        }
      }
    },
    "body": {
      "type": "center",
      "child": {
        "type": "column",
        "args": {
          "mainAxisSize": "min"
        },
        "children": [{
          "type": "row",
          "args": {
            "mainAxisAlignment": "spaceEvenly"
          },
          "children": [{
            "type": "elevated_button",
            "args": {
              "onPressed": "${set_value('error', 'This is an error')}"
            },
            "child": {
              "type": "text",
              "args": {
                "text": "Show Error"
              }
            }
          }, {
            "type": "elevated_button",
            "args": {
              "onPressed": "${remove_value('error')}"
            },
            "child": {
              "type": "text",
              "args": {
                "text": "Hide Error"
              }
            }
          }]
        }, {
          "type": "sized_box",
          "args": {
            "height": "16"
          }
        }, {
          "type": "input_error",
          "args": {
            "text": "${error}"
          }
        }]
      }
    }
  }
}