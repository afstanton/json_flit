{
	"type": "scaffold",
	"args": {
		"appBar": {
			"type": "app_bar",
			"args": {
				"title": {
					"type": "text",
					"args": {
						"text": "Measured"
					}
				}
			}
		},
		"body": {
			"type": "list_view",
			"children": [
				{
					"type": "container",
					"id": "scroll_pre_container",
					"args": {
						"color": "999",
						"height": 100.0
					},
					"child": {
						"type": "center",
						"child": {
							"type": "column",
							"args": {
								"mainAxisSize": "min"
							},
							"children": [
								{
									"type": "text",
									"args": {
										"style": {
											"fontWeight": "bold"
										},
										"text": "pre-container"
									}
								},
								{
									"type": "row",
									"args": {
										"mainAxisSize": "min"
									},
									"children": [
										{
											"type": "text",
											"args": {
												"text": "${container.width}"
											}
										},
										{
											"type": "text",
											"args": {
												"text": " x "
											}
										},
										{
											"type": "text",
											"args": {
												"text": "${container.height}"
											}
										}
									]
								}
							]
						}
					}
				},
				{
					"type": "container",
					"args": {
						"color": "aaa",
						"height": 100.0
					},
					"child": {
						"type": "center",
						"child": {
							"type": "measured",
							"id": "text",
							"child": {
								"type": "column",
								"args": {
									"mainAxisSize": "min"
								},
								"children": [
									{
										"type": "text",
										"args": {
											"style": {
												"fontWeight": "bold"
											},
											"text": "text"
										}
									},
									{
										"type": "row",
										"args": {
											"mainAxisSize": "min"
										},
										"children": [
											{
												"type": "text",
												"args": {
													"text": "${text.width}"
												}
											},
											{
												"type": "text",
												"args": {
													"text": " x "
												}
											},
											{
												"type": "text",
												"args": {
													"text": "${text.height}"
												}
											}
										]
									}
								]
							}
						}
					}
				},
				{
					"type": "container",
					"args": {
						"color": "bbb",
						"height": 100.0
					},
					"child": {
						"type": "container",
						"child": {
							"type": "center",
							"child": {
								"type": "measured",
								"id": "text_bold",
								"child": {
									"type": "column",
									"args": {
										"mainAxisSize": "min"
									},
									"children": [
										{
											"type": "text",
											"args": {
												"style": {
													"fontWeight": "bold"
												},
												"text": "text_bold"
											}
										},
										{
											"type": "row",
											"args": {
												"mainAxisSize": "min"
											},
											"children": [
												{
													"type": "text",
													"args": {
														"style": {
															"fontWeight": "bold"
														},
														"text": "${text_bold.width}"
													}
												},
												{
													"type": "text",
													"args": {
														"style": {
															"fontWeight": "bold"
														},
														"text": " x "
													}
												},
												{
													"type": "text",
													"args": {
														"style": {
															"fontWeight": "bold"
														},
														"text": "${text_bold.height}"
													}
												}
											]
										}
									]
								}
							}
						}
					}
				},
				{
					"type": "container",
					"id": "scroll_container",
					"args": {
						"alignment": "center"
					},
					"child": {
						"type": "container",
						"args": {
							"color": "ccc",
							"height": 100.0,
							"width": 300.0
						},
						"child": {
							"type": "measured",
							"id": "container",
							"child": {
								"type": "center",
								"child": {
									"type": "column",
									"args": {
										"mainAxisSize": "min"
									},
									"children": [
										{
											"type": "text",
											"args": {
												"style": {
													"fontWeight": "bold"
												},
												"text": "container"
											}
										},
										{
											"type": "row",
											"args": {
												"mainAxisSize": "min"
											},
											"children": [
												{
													"type": "text",
													"args": {
														"text": "${container.width}"
													}
												},
												{
													"type": "text",
													"args": {
														"text": " x "
													}
												},
												{
													"type": "text",
													"args": {
														"text": "${container.height}"
													}
												}
											]
										}
									]
								}
							}
						}
					}
				}
			]
		}
	}
}