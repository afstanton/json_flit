{
  "type": "scaffold",
  "args": {
    "appBar": {
      "type": "app_bar",
      "args": {
        "title": {
          "type": "text",
          "args": {
            "text": "AnimatedOpacity"
          }
        }
      }
    },
    "body": {
      "type": "set_value",
      "args": {
        "customOpacity": 1
      },
      "child": {
        "type": "animated_opacity",
        "args": {
          "curve": "${slow_middle_curve}",
          "duration": 1000,
          "opacity": "${customOpacity}"
        },
        "child": {
          "type": "container",
          "args": {
            "color": "#FF0000"
          }
        }
      }
    },
    "floatingActionButton": {
      "type": "elevated_button",
      "id": "press_me_button",
      "args": {
        "onPressed": "${set_value('customOpacity', 0)}"
      },
      "child": {
        "type": "text",
        "args": {
          "text": "Press Me!"
        }
      }
    }
  }
}